<div style="margin-left:50px;margin-right:50px">
    <div class="header panel-heading" style="background-image:linear-gradient(347deg, #48c6ef, #2399d2);height: 80px;text-align: center;">
        <a href="/">
            <img src="/logo-tma.png" alt="logo-tma" style="width:100px; padding: 10px 0; height: auto; float: left">
        </a>
        <h2 style="margin-left: 10px;color: white;font-weight: bold;" class="col-sm-3">TMA WEB LOG</h2>
    </div>
    <div class="container-fluid" style="margin-top: 20px">
        <h2>Users Management</h2>
        <div class="row">
            <div class="col-sm-6">
                <table class="table table-hover table-curved" style="margin-top: 40px">
                    <thead class="thead-dark">
                    <tr class="bg-primary">
                        <th width="5%">No</th>
                        <th width="30%">Name</th>
                        <th width="25%">User Name</th>
                        <th width="17%">Role</th>
                        <th width="22%">Function</th>
                        </tr>
                    </thead>
                    <tbody>
                    <% if(users != null) {%>
                        <% for(var i = 0; i < users.length; i++) {%>
                            <tr>
                                <td><%= i + 1 %></td>
                                <td><%= users[i].name %></td>
                                <td><%= users[i].username %></td>
                                <td><%= users[i].role %></td>
                                <td>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-primary">Edit</button>
                                        <button type="button" class="btn btn-danger">Delete</button>
                                        <button type="button" class="btn btn-success">Chart</button>
                                    </div>
                                </td>
                            </tr>
                        <% } %>
                    <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>